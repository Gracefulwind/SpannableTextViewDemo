<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_20dp"
    android:layout_marginRight="@dimen/dimen_20dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="2dp"
    app:cardCornerRadius="6dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:layout_marginBottom="@dimen/dimen_25dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <!--<ImageView-->
                <!--android:id="@+id/imcra_iv_red_dot"-->
                <!--android:layout_width="@dimen/dimen_6dp"-->
                <!--android:layout_height="@dimen/dimen_6dp"-->
                <!--android:background="@drawable/shape_circle_red_dot"-->
                <!--/>-->
            <TextView
                android:id="@+id/imcra_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/fontSize_14"
                android:text="您的审核通过啦"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_13dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:orientation="vertical"
            >
            <com.wind.widget.spannable.SpannableTextView
                android:id="@+id/imcra_tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/fontSize_12"
                app:expandLines="3"
                android:text="恭喜加入趣管账会员中心，您已获得399元虾买商城现金券，戳 http:\/\/uee.me\/QzE7  下载领取 退订回T"
                />
            <TextView
                android:id="@+id/imcra_tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/fontSize_12"
                android:text="2018-05-18  13:20:40"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>